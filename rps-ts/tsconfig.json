{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */    
    "types": ["node"],
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "lib": [
      "es6", "es7", "es2017"
    ]
  },
  "include": ["src", "typings"]
}
